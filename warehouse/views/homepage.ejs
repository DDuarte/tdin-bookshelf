<div class="container">

  <div class="section">
    <div class="container">
      <h2 class="section-title">Create an account</h2>

      <p>
        If you do not have an account created yet you can do it here.
      </p>

      <p class="text-warning">
        Access to this website is restricted to Bookshelf employees only.<br><br>
      </p>

      <form role="form" ng-submit="submitSignupForm()" id="sign-up-form" class="form-signup" name="signup">
        <div class="control-group form-group col-md-12"
             ng-class="{'has-error':signup.name.$invalid && signup.name.$dirty}">
          <label for="name">Full name</label>

          <input type="text" class="form-control" placeholder="e.g. John Doe" name="name" ng-model="signupForm.name"
                 ng-maxlength="50" required>

          <span class="help-block has-error" ng-if="signup.name.$dirty">
            <span ng-show="signup.name.$error.required">Name is required.</span>
            <span ng-show="signup.name.$error.maxlength">The name cannot be more than 50 characters.</span>
          </span>
        </div>

        <div class="control-group form-group col-md-12"
             ng-class="{'has-error':signup.email.$invalid && signup.email.$dirty}">
          <label for="email">Email address</label>
          <input type="email" class="form-control" placeholder="johndoe@bookshelf.com" name="email"
                 ng-model="signupForm.email" required>
          <span class="help-block has-error" ng-if="signup.email.$dirty">
            <span ng-show="signup.email.$error.required">Email address is required.</span>
            <span ng-show="signup.email.$error.email">Not a valid email address.</span>
          </span>
        </div>

        <div class="control-group form-group col-md-6"
             ng-class="{'has-error':signup.password.$invalid && signup.password.$dirty}">
          <label for="password">Choose a password</label>
          <!-- Added the compareTo directive that compares the passowrds -->
          <input type="password" class="form-control" placeholder="at least 3 characters" name="password"
                 ng-model="signupForm.password" id="password" required ng-minlength="3"
                 compare-to="signupForm.confirmPassword">
          <span class="help-block has-error" ng-if="signup.password.$dirty">
            <span ng-show="signup.password.$error.required">Password is required.</span>
            <span ng-show="signup.password.$error.minlength">Password must be at least 3 characters.</span>
          </span>
        </div>

        <div class="control-group form-group col-md-6">
          <label for="confirmation">Re-enter your password</label>
          <input type="password" class="form-control" placeholder="one more time" name="confirmation"
                 ng-model="signupForm.confirmPassword" required>
          <span class="help-block has-error" ng-if="signup.confirmation.$dirty">
            <span ng-show="signup.password.$error.compareTo">Password must match.</span>
            <span ng-show="signup.confirmation.$error.required">Confirmation password is required.</span>
          </span>
        </div>

        <div class="submit text-right">
          <button class="btn btn-primary btn-lg btn-block" type="submit" ng-disabled="signup.$invalid">
            <span ng-show="!signupForm.loading">Create Account</span>
            <span class="overlord-loading-spinner fa fa-spinner" ng-show="signupForm.loading"></span>
            <span ng-show="signupForm.loading">Preparing your new account...</span>
          </button>
        </div>
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
      </form>
    </div>
  </div>
</div> <!-- /container -->
